extends layout
block content
  .frame
    form.ui.form.segment(action='/register' method='post' style='background-color: white;padding: 1em;')
      h1.ui.dividing.header.center.aligned Wirebird's Chat Registration
      .ui.left.icon.input.fluid.field
        i.user.icon
        input(type='text' name='username' placeholder='Username' autofocus)
      .ui.left.icon.input.fluid.field
        i.mail.icon
        input(type='text' name='email' placeholder='Email address' autocomplete='off')
      .ui.left.icon.input.fluid.field
        i.lock.icon
        input(type='password' name='password' placeholder='Password')
      .ui.left.icon.input.fluid.field
        i.lock.icon
        input(type='password' placeholder='Password again')
      .ui.two.column.grid
        .column
          button.ui.button.submit.fluid.teal Register
        .column
          a.ui.button.fluid(href="/") Back To Login